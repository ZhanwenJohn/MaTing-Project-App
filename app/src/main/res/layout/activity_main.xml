<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FFCCCC"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/daughter1"
                android:layout_margin="10dp"
                android:id="@+id/iv_0"
                android:contentDescription="@string/bottom_sheet_behavior"
                android:layout_height="200dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/qinwen0"
                        android:id="@+id/iv_1"
                        android:contentDescription="@string/bottom_sheet_behavior"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/app_iv_name5"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:id="@+id/tv_1"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/qinqin0"
                        android:id="@+id/iv_2"
                        android:contentDescription="@string/bottom_sheet_behavior"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/app_iv_name3"
                        android:textSize="20sp"
                        android:id="@+id/tv_2"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/meiyan0"
                        android:id="@+id/iv_3"
                        android:contentDescription="@string/bottom_sheet_behavior"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/app_iv_name4"
                        android:textSize="20sp"
                        android:id="@+id/tv_3"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/xin0"
                        android:id="@+id/iv_4"
                        android:contentDescription="@string/bottom_sheet_behavior"
                        android:layout_height="wrap_content"
                        tools:ignore="InefficientWeight,NestedWeights">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/app_iv_name2"
                        android:textSize="20sp"
                        android:id="@+id/tv_4"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/xin1"
                        android:id="@+id/iv_5"
                        android:contentDescription="@string/bottom_sheet_behavior"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/app_iv_name1"
                        android:textSize="20sp"
                        android:id="@+id/tv_5"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/huachi0"
                        android:id="@+id/iv_6"
                        android:contentDescription="@string/bottom_sheet_behavior"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/app_iv_name0"
                        android:textSize="20sp"

                        android:id="@+id/tv_6"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/bt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_iv_name6" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_iv_name0"
            android:layout_gravity="center_horizontal"
            android:textSize="50px"
            android:textColor="@color/purple_700"
            android:id="@+id/tv_7"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>